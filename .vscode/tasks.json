{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\build\\bin\\${fileBasenameNoExtension}.exe",  //提前配置好文件结构
                "-I",
                "${workspaceFolder}\\include",  //提前配置好文件结构
                "-Wall",
                "-std=c++17"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "D:\\Coding\\C++\\MinGW\\mingw64\\bin"  //编译器的路径
            }
        },
        {
            "label": "clean build output",
            "type": "shell",
            "command": "rmdir",
            "args": [
                "/s",
                "/q",
                "${workspaceFolder}\\build\\bin"  //提前配置好文件结构
            ],
            "group": "build"
        },
        {
            "label": "build all src files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\*.cpp",  //提前配置好文件结构
                "-o",
                "${workspaceFolder}\\build\\bin\\myproject.exe",  //提前配置好文件结构
                "-I",
                "${workspaceFolder}\\include",  //提前配置好文件结构    
                "-Wall",
                "-std=c++17"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\Coding\\C++\\MinGW\\mingw64\\bin\\g++.exe", //编译器的路径
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}